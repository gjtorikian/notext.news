<!DOCTYPE html>
<html lang="en">
  <head>
    {{> _meta}}
  </head>
  <body>
    <div id="nt-news-loader">
      <h1 id="nt-news-message" class="nt-news-text">Loading</h1>
    </div>
    <div id="nt-news-body-text">
    {{{body}}}
    </div>
    <script>
    function viewport() {
      var e = window, a = 'inner';
      if ( !( 'innerWidth' in window ) ) {
        a = 'client';
        e = document.documentElement || document.body;
      }
      return { width : e[ a+'Width' ] , height : e[ a+'Height' ] }
    }

    window.addEventListener('DOMContentLoaded', async (event) => {
      let source = "{{{source}}}"
      let width = viewport().width
      let height = viewport().height
      const response = await fetch(`/${source}/data?width=${width}&height=${height}`);
      const news = await response.json();

      let htmlTag = document.getElementsByTagName("html")[0];
      htmlTag.classList.add(...(Object.values(news.htmlClasses)));;
      htmlTag.setAttribute("lang", news.htmlLang);

      let head = document.head;
      head.innerHTML += news.headHTML;
      let body = document.body;
      body.innerHTML += news.bodyHTML;
      body.classList.add(...(Object.values(news.bodyClasses)));

      document.getElementById("nt-news-loader").remove();
    });
    </script>
  </body>
</html>
